# Site / identity
SITE_ID=dev01
DEVICE_FW=gw-1.0.0

# HTTP API
API_HOST=0.0.0.0
API_PORT=4000

# Polling (you can tweak later)
POLL_MS=60000              # one full pass every 60s
POLL_CONCURRENCY=8
FAMILY_RELOAD_MS=300000    # reload configs every 5 min

# MQTT broker (point this at wherever Mosquitto/EMQX is running)
#MQTT_HOST=192.168.0.192     # <-- change to your broker IP (Pi or laptop)
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
#MQTT_TLS=1                # only if you have TLS broker
#MQTT_USER=...
#MQTT_PASS=...

# Logging
#LOG_DIR=/absolute/path/for/logs      # optional; default backend/data/logs
#LOG_MIN_INTERVAL_MS=300000           # per-tank log min interval

# Optional: allow HTTP without HSTS (nice in dev)
DISABLE_HSTS=1
# Optional: disable auth (nice in dev)
DISABLE_AUTH=1